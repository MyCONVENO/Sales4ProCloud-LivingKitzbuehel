<%@ Page Title="" Language="C#" MasterPageFile="~/Site.Master" AutoEventWireup="true" CodeBehind="AddEditAccounts.aspx.cs" Inherits="SALESCenterLivingKB.MasterAdmin.AddEditAccounts" %>
<asp:Content ID="Content1" ContentPlaceHolderID="MainContent" runat="server">
        <h3>Benutzer:</h3>
    <table>
        <tr>
            <td>
                <asp:Label ID="labelUserName" runat="server">E-Mail:</asp:Label></td>
            <td>
                <asp:TextBox ID="tbUserEmail" runat="server" TextMode="Email" />
            </td>
        </tr>
        <tr>
            <td>
                <asp:Label ID="label1" runat="server">Passwort:</asp:Label></td>
            <td>
                <asp:TextBox ID="tbPassword" runat="server" TextMode="Password" />
                <br />
                <asp:Button runat="server" ID="saveButton" OnClick="saveButton_Click" Text="speichern" CssClass="btn btn-default" />
            </td>
        </tr>
        <tr>
            <td style="vertical-align: top;">
                <asp:Label ID="labelAlarmDate" runat="server">Mitglied in Benutzergruppe:</asp:Label></td>
            <td>
                <asp:GridView runat="server" ID="rollsGrid"
                    ItemType="SALESCenterLivingKB.Models.SimpleRole" DataKeyNames="Id"
                    SelectMethod="rollsGrid_GetData"
                    AutoGenerateColumns="false"
                    AllowPaging="true"
                    AutoGenerateDeleteButton="true"
                    DeleteMethod="rollsGrid_DeleteItem"
                    CssClass="table table-striped table-bordered table-hover">
                    <Columns>
                        <asp:DynamicField DataField="Name" />
                    </Columns>
                </asp:GridView>
            </td>
        </tr>
        <tr>
            <td>
                <asp:Label ID="labelRoles" runat="server">Benutzergruppe hinzufügen:</asp:Label>

            </td>
            <td>
                <asp:DropDownList ID="DropDownRoles" runat="server"
                    ItemType="SALESCenterLivingKB.Models.SimpleRole"
                    DataTextField="Name" DataValueField="Id" SelectMethod="GetRoles">
                </asp:DropDownList>
                <asp:Button ID="Button1" runat="server" Text="hinzufügen" OnClick="Button1_Click" CausesValidation="true" />
            </td>
        </tr>      
    </table>
    <p></p>
    <p></p>
    <asp:Label ID="LabelAddStatus" runat="server" Text=""></asp:Label>
</asp:Content>
